@page "/"
@attribute [Authorize]

<PageTitle>Dashboard - BarberCo Management</PageTitle>

<MudText Typo="Typo.h4" Class="mb-4">Dashboard</MudText>

<AuthorizeView>
    <Authorized>
        <MudGrid>
            <MudItem xs="12" sm="6" md="3">
                <MudPaper Class="pa-4" Elevation="2">
                    <MudText Typo="Typo.h6">Today's Appointments</MudText>
                    <MudText Typo="Typo.h3" Color="Color.Primary">0</MudText>
                </MudPaper>
            </MudItem>
            <MudItem xs="12" sm="6" md="3">
                <MudPaper Class="pa-4" Elevation="2">
                    <MudText Typo="Typo.h6">This Week</MudText>
                    <MudText Typo="Typo.h3" Color="Color.Secondary">0</MudText>
                </MudPaper>
            </MudItem>
            <MudItem xs="12" sm="6" md="3">
                <MudPaper Class="pa-4" Elevation="2">
                    <MudText Typo="Typo.h6">Active Services</MudText>
                    <MudText Typo="Typo.h3" Color="Color.Success">0</MudText>
                </MudPaper>
            </MudItem>
            <MudItem xs="12" sm="6" md="3">
                <MudPaper Class="pa-4" Elevation="2">
                    <MudText Typo="Typo.h6">Revenue Today</MudText>
                    <MudText Typo="Typo.h3" Color="Color.Info">$0</MudText>
                </MudPaper>
            </MudItem>
        </MudGrid>

        <MudText Typo="Typo.h5" Class="mt-6 mb-4">Welcome back, @context.User.Identity?.Name!</MudText>
        
        <MudPaper Class="pa-4" Elevation="2">
            <MudText Typo="Typo.h6" Class="mb-2">Quick Actions</MudText>
            <MudGrid>
                <MudItem xs="12" sm="6" md="4">
                    <MudButton Variant="Variant.Outlined" Color="Color.Primary" FullWidth="true" StartIcon="@Icons.Material.Filled.CalendarMonth" Href="/appointments">
                        View Appointments
                    </MudButton>
                </MudItem>
                <MudItem xs="12" sm="6" md="4">
                    <MudButton Variant="Variant.Outlined" Color="Color.Secondary" FullWidth="true" StartIcon="@Icons.Material.Filled.Schedule" Href="/hours">
                        Manage Hours
                    </MudButton>
                </MudItem>
                <MudItem xs="12" sm="6" md="4">
                    <MudButton Variant="Variant.Outlined" Color="Color.Tertiary" FullWidth="true" StartIcon="@Icons.Material.Filled.ContentCut" Href="/services">
                        Update Services
                    </MudButton>
                </MudItem>
            </MudGrid>
        </MudPaper>
    </Authorized>
</AuthorizeView>
