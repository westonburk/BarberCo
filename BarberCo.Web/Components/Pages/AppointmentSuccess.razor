@page "/appointment-success/{Date}"

<div class="appointment-success-container">
    <div class="success-icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="120" height="120" fill="currentColor" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
        </svg>
    </div>
    <h1>Appointment Created</h1>
    <div class="appointment-time">
        @DateTime.ToString("dddd, MMMM d, yyyy")
        <br />
        @DateTime.ToString("h tt")
    </div>
</div>

@code {
    [Parameter]
    public string Date { get; set; }
    private DateTime DateTime;

    protected override void OnInitialized()
    {
        DateTime = DateTime.Parse(Date);
        base.OnInitialized();
    }
}